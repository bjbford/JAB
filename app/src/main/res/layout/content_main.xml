<?xml version="1.0" encoding="utf-8"?>

<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/viewFlipper"
    android:layout_above="@+id/toggleButton"
    android:layout_toEndOf="@+id/button8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="edu.isu.jab.jab_isu.MainActivity"
        tools:showIn="@layout/activity_main"
        android:id="@+id/NAVIGATION"
        android:background="#f90000">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="118dp"
                android:layout_height="fill_parent"
                android:id="@+id/leftLayout">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Burp   "
                    android:id="@+id/button"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:onClick="onButtonClickBurp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Left    "
                    android:id="@+id/buttonTurnLeft"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:onClick="onButtonClickLeft"
                    android:background="#90a6f0" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On/Off"
                    android:id="@+id/toggleButton"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="41dp"
                    android:checked="false"
                    android:background="#73d609" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="121dp"
                android:layout_height="fill_parent"
                android:id="@+id/middleLayout"
                android:weightSum="1">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Whistle"
                    android:id="@+id/button2"
                    android:layout_alignTop="@+id/button"
                    android:layout_centerHorizontal="true"
                    android:onClick="onButtonClickWhistle" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="   Forward   "
                    android:id="@+id/buttonWalkForward"
                    android:layout_marginTop="66dp"
                    android:layout_below="@+id/button2"
                    android:layout_centerHorizontal="true"
                    android:onClick="onButtonClickForward"
                    android:background="#90a6f0" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="121dp"
                    android:text=" STOP "
                    android:id="@+id/buttonStop"
                    android:layout_alignTop="@+id/buttonTurnLeft"
                    android:layout_centerHorizontal="true"
                    android:onClick="onButtonClickStop"
                    android:background="#f90606"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=" Backward  "
                    android:id="@+id/buttonWalkBackward"
                    android:layout_below="@+id/buttonStop"
                    android:layout_alignStart="@+id/buttonWalkForward"
                    android:layout_marginTop="47dp"
                    android:onClick="onButtonClickBackward"
                    android:background="#90a6f0" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/rightLayout">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Five"
                    android:id="@+id/button3"
                    android:layout_alignTop="@+id/button2"
                    android:layout_alignParentEnd="true"
                    android:onClick="onButtonClickHighFive" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right"
                    android:id="@+id/buttonTurnRight"
                    android:layout_alignTop="@+id/buttonStop"
                    android:layout_alignParentEnd="true"
                    android:onClick="onButtonClickRight"
                    android:background="#90a6f0" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NAVIGATION"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="edu.isu.jab.jab_isu.MainActivity"
        tools:showIn="@layout/activity_main"
        android:id="@+id/STATIONARY">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="STATIONARY"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Lean Forward  "
            android:id="@+id/button9"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lean Backward"
            android:id="@+id/button10"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/button9" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R Throw"
            android:id="@+id/button11"
            android:layout_alignBottom="@+id/button9"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="42dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R Pickup"
            android:id="@+id/button12"
            android:layout_above="@+id/button10"
            android:layout_alignStart="@+id/button11" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  R Bump "
            android:id="@+id/button13"
            android:layout_alignTop="@+id/button14"
            android:layout_alignStart="@+id/button12" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" L Bump  "
            android:id="@+id/button14"
            android:layout_below="@+id/button10"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L Throw"
            android:id="@+id/button15"
            android:layout_alignTop="@+id/button11"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L Pickup"
            android:id="@+id/button16"
            android:layout_alignTop="@+id/button12"
            android:layout_alignParentStart="true" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On/Off"
            android:id="@+id/toggleButton2"
            android:layout_marginBottom="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="edu.isu.jab.jab_isu.MainActivity"
        tools:showIn="@layout/activity_main"
        android:id="@+id/UTLITIES">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="168dp"
                android:layout_height="fill_parent"
                android:weightSum="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/button6" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:id="@+id/button7"
                    android:layout_weight="1.12" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="176dp"
                    android:text="C"
                    android:id="@+id/button17" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="155dp"
                    android:text="D"
                    android:id="@+id/button18" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="371dp"
                    android:text="Right"
                    android:id="@+id/button5" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ViewFlipper>